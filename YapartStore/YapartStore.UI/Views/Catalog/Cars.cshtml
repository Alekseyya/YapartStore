@model List<YapartStore.UI.ViewModels.ModelViewModel>

@{
    ViewBag.Title = "Cars";
}
<div class="catalog-model container">
    <div class="catalog-model__filter">
        <div class="catalog-model__filter-year">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Выбери год
            </button>
            <div class="dropdown-menu year-dropdown-menu" aria-labelledby="dropdownMenuButton">
                <div class="a">
                    <div>aaaaaaa</div>
                    <div>bbbbbbbb</div>
                </div>
                <div class="b">
                    <div>bbb</div>
                    <div>nnnnn</div>
                </div>
            </div>
        </div>
        <div class="catalog-model__sort"></div>
    </div>
    <div class="catalog-model__list row">
        @foreach (var carModel in Model)
        {
            <div class="catalog-model__item model-info">
                <div class="model-info__model-image">
                    <img src="@carModel.PicturePath" alt="Alternate Text" />
                </div>
                <div class="model-info__descriptions">
                    <div class="model-info__model-name">
                        @*@Html.ActionLink(@carModel.Name, "Cars", new {})*@
                        <a href="#">@carModel.Name</a>
                    </div>
                    <div class="model-info__model-model"></div>
                    <div class="model-info__model-years">@carModel.Years</div>
                </div>
            </div>

        }
    </div>
</div>

